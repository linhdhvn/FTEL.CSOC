@using MyCompanyName.AbpZeroTemplate.Authorization
@using MyCompanyName.AbpZeroTemplate.Web.Areas.AppAreaName.Models.DataStorages
@using MyCompanyName.AbpZeroTemplate.Web.Areas.AppAreaName.Startup
@model DataStoragesViewModel
@{
ViewBag.CurrentPageName = AppAreaNamePageNames.Host.DataStorages;
}
@section Scripts
{
<script abp-src="/view-resources/Areas/AppAreaName/Views/DataStorages/Index.js" asp-append-version="true"></script>
}

<div class="content d-flex flex-column flex-column-fluid">

    <abp-page-subheader title='@L("DataStorages")' description='@L("DataStoragesHeaderInfo")'>
        <button id="ExportToExcelButton" class="btn btn-outline btn-outline-success btn-active-light-success me-1"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>

        @if (IsGranted(AppPermissions.Pages_DataStorages_Create))
        {
        <button id="CreateNewDataStorageButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewDataStorage")</button>
        }
    </abp-page-subheader>

    <div class="@(await GetContainerClass())">
        <div class="card card-custom gutter-b">
            <div class="card-body">
                <div class="form">
                    <div class="row align-items-center mb-4">
                        <div class="col-xl-12">

                            <div class="my-3">
                                <div class="input-group">
                                    <input type="text" id="DataStoragesTableFilter" class="form-control" placeholder='@L("SearchWithThreeDot")' value="@Model.FilterText">
                                    <button id="GetDataStoragesButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                    <div class="col-md-12">

                    </div>

                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="ModelFilterId">@L("Model")</label>
                            <input type="text" class="form-control" name="modelFilter" id="ModelFilterId">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="MinSizeFilterId">@L("MinMax") @L("Size")</label>
                            <div class="input-group">
                                <input type="number" class="form-control m-input" placeholder="@L(" MinValue")" name="minSizeFilter" id="MinSizeFilterId" />
                                <input type="number" class="form-control m-input" placeholder="@L(" MaxValue")" name="maxSizeFilter" id="MaxSizeFilterId" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="SerialNumberFilterId">@L("SerialNumber")</label>
                            <input type="text" class="form-control" name="serialNumberFilter" id="SerialNumberFilterId">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="MediaTypeFilterId">@L("MediaType")</label>
                            <input type="text" class="form-control" name="mediaTypeFilter" id="MediaTypeFilterId">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="HealthStatusFilterId">@L("HealthStatus")</label>
                            <input type="text" class="form-control" name="healthStatusFilter" id="HealthStatusFilterId">
                        </div>
                    </div>

                </div>
                <div class="row my-4">
                    <div class="col-xl-12">
                        <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                        <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                    </div>
                </div>
                <div class="row align-items-center">
                    <table id="DataStoragesTable" class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">
                        <thead>
                            <tr>
                                <th></th>

                                <th>@L("Actions")</th>
                                <th>@L("Model")</th>
                                <th>@L("Size")</th>
                                <th>@L("SerialNumber")</th>
                                <th>@L("MediaType")</th>
                                <th>@L("HealthStatus")</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>