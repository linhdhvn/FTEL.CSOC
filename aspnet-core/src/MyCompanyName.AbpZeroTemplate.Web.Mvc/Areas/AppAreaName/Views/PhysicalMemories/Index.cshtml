@using MyCompanyName.AbpZeroTemplate.Authorization
@using MyCompanyName.AbpZeroTemplate.Web.Areas.AppAreaName.Models.PhysicalMemories
@using MyCompanyName.AbpZeroTemplate.Web.Areas.AppAreaName.Startup
@model PhysicalMemoriesViewModel
@{
ViewBag.CurrentPageName = AppAreaNamePageNames.Host.PhysicalMemories;
}
@section Scripts
{
<script abp-src="/view-resources/Areas/AppAreaName/Views/PhysicalMemories/Index.js" asp-append-version="true"></script>
}

<div class="content d-flex flex-column flex-column-fluid">

    <abp-page-subheader title='@L("PhysicalMemories")' description='@L("PhysicalMemoriesHeaderInfo")'>
        <button id="ExportToExcelButton" class="btn btn-outline btn-outline-success btn-active-light-success me-1"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>

        @if (IsGranted(AppPermissions.Pages_PhysicalMemories_Create))
        {
        <button id="CreateNewPhysicalMemoryButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewPhysicalMemory")</button>
        }
    </abp-page-subheader>

    <div class="@(await GetContainerClass())">
        <div class="card card-custom gutter-b">
            <div class="card-body">
                <div class="form">
                    <div class="row align-items-center mb-4">
                        <div class="col-xl-12">

                            <div class="my-3">
                                <div class="input-group">
                                    <input type="text" id="PhysicalMemoriesTableFilter" class="form-control" placeholder='@L("SearchWithThreeDot")' value="@Model.FilterText">
                                    <button id="GetPhysicalMemoriesButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                    <div class="col-md-12">

                    </div>

                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="NameFilterId">@L("Name")</label>
                            <input type="text" class="form-control" name="nameFilter" id="NameFilterId">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="MinCapacityFilterId">@L("MinMax") @L("Capacity")</label>
                            <div class="input-group">
                                <input type="number" class="form-control m-input" placeholder="@L(" MinValue")" name="minCapacityFilter" id="MinCapacityFilterId" />
                                <input type="number" class="form-control m-input" placeholder="@L(" MaxValue")" name="maxCapacityFilter" id="MaxCapacityFilterId" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="PartNumberFilterId">@L("PartNumber")</label>
                            <input type="text" class="form-control" name="partNumberFilter" id="PartNumberFilterId">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="MinSpeedFilterId">@L("MinMax") @L("Speed")</label>
                            <div class="input-group">
                                <input type="number" class="form-control m-input" placeholder="@L(" MinValue")" name="minSpeedFilter" id="MinSpeedFilterId" />
                                <input type="number" class="form-control m-input" placeholder="@L(" MaxValue")" name="maxSpeedFilter" id="MaxSpeedFilterId" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="SerialNumberFilterId">@L("SerialNumber")</label>
                            <input type="text" class="form-control" name="serialNumberFilter" id="SerialNumberFilterId">
                        </div>
                    </div>

                </div>
                <div class="row my-4">
                    <div class="col-xl-12">
                        <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                        <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                    </div>
                </div>
                <div class="row align-items-center">
                    <table id="PhysicalMemoriesTable" class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">
                        <thead>
                            <tr>
                                <th></th>

                                <th>@L("Actions")</th>
                                <th>@L("Name")</th>
                                <th>@L("Capacity")</th>
                                <th>@L("PartNumber")</th>
                                <th>@L("Speed")</th>
                                <th>@L("SerialNumber")</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>