@using MyCompanyName.AbpZeroTemplate.Authorization
@using MyCompanyName.AbpZeroTemplate.Web.Areas.AppAreaName.Models.Resources
@using MyCompanyName.AbpZeroTemplate.Web.Areas.AppAreaName.Startup
@model ResourcesViewModel
@{
    ViewBag.CurrentPageName = AppAreaNamePageNames.Host.Resources;
}
@section Scripts
{
    <script abp-src="/view-resources/Areas/AppAreaName/Views/Resources/Index.js" asp-append-version="true"></script>
}

<div class="content d-flex flex-column flex-column-fluid">

    <abp-page-subheader title='@L("Resources")' description='@L("ResourcesHeaderInfo")'>
        <button id="ExportToExcelButton" class="btn btn-outline btn-outline-success btn-active-light-success me-1"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>

        @if (IsGranted(AppPermissions.Pages_Resources_Create))
        {
            <button id="CreateNewResourceButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewResource")</button>
        }
    </abp-page-subheader>

    <div class="@(await GetContainerClass())">
        <div class="card card-custom gutter-b">
            <div class="card-body">
                <div class="form">
                    <div class="row align-items-center mb-4">
                        <div class="col-xl-12">

                            <div class="my-3">
                                <div class="input-group">
                                    <input type="text" id="ResourcesTableFilter" class="form-control" placeholder='@L("SearchWithThreeDot")' value="@Model.FilterText">
                                    <button id="GetResourcesButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="row align-items-center">
                    <table id="ResourcesTable" class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">
                        <thead>
                            <tr>
                                <th></th>

                                <th>@L("Actions")</th>
                                <th>@L("Name")</th>
                                <th>@L("OperatingSystem")</th>
                                <th>@L("BuildNumber")</th>
                                <th>@L("InstallDate")</th>
                                <th>@L("HostName")</th>
                                <th>@L("Domain")</th>
                                <th>@L("Description")</th>
                                <th>@L("CreateTime")</th>
                                <th>@L("UpdateTime")</th>
                                <th>@L("LastBootUpTime")</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>